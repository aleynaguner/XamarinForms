<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileW06.ActivityIndicatorPage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image x:Name="MyImage" Aspect="AspectFit" AbsoluteLayout.LayoutBounds="0,0, 1,1" AbsoluteLayout.LayoutFlags="All" />

            <ActivityIndicator Color="Red" IsRunning="{Binding Source={x:Reference MyImage}, Path=IsLoading}"
            AbsoluteLayout.LayoutBounds="0.5,0.5,100,100"     
            AbsoluteLayout.LayoutFlags="PositionProportional"
            />


        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>