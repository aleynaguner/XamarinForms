<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileW3.Grid"
             Padding="15" BackgroundColor="Red"
             >

    <Grid BackgroundColor="Aquamarine" RowSpacing="15" Column="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Label Grid.Row="0" Grid.Column="0" Text="CELL00" FontSize="20" BackgroundColor="White"/>
        <Label Grid.Row="0" Grid.Column="1" Text="CELL01" FontSize="20" BackgroundColor="White"/>
        <Label Grid.Row="0" Grid.Column="2" Text="CELL02" FontSize="20" BackgroundColor="White"
               Grid.RowSpan="3"/>
        <Label Grid.Row="1" Grid.Column="0" Text="CELL10" FontSize="20" BackgroundColor="White"/>
        <Label Grid.Row="1" Grid.Column="1" Text="CELL11" FontSize="20" BackgroundColor="White"/>
        <Label Grid.Row="2" Grid.Column="0" Text="CELL21" FontSize="20" BackgroundColor="White" Grid.ColumnSpan="2" />

    </Grid>

</ContentPage>